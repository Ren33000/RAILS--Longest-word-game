<div class="container">
    <h1>New game</h1>

    <ol class="flexBox">
    <% @letters.each do |letter| %>
        <li class="flexItems"><%= letter.capitalize %></li>
    <% end %>
    </ol>

    <p>What is the longest word you can find?</p>

  <form action="score" method="post" class="searchFlexbox">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :selected_letters, @letters %>
    <input type="text" class="searchBar" placeholder ="Enter a word" name="user_answer"/>
    <button type="submit" class="searchButton" value="Ask!">Play</button>
  </form> 
</div>

